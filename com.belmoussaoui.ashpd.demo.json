{
    "app-id": "com.belmoussaoui.ashpd.demo",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable", "org.freedesktop.Sdk.Extension.llvm12"],
    "command": "ashpd-demo",
    "finish-args" : [
        "--socket=fallback-x11",
        "--share=ipc",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.a11y.Bus",
        "--share=network",
        "--env=RUST_LOG=ashpd_demo=debug,ashpd=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "prepend-path": "/usr/lib/sdk/llvm12/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm12/lib"
    },
    "modules": [
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources" : [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                "tag": "1.0.0.alpha.3"
            }],
            "modules": [
                {
                    "name" : "libsass",
                    "buildsystem" : "meson",
                    "cleanup": ["*"],
                    "sources" : [{
                        "type" : "git",
                        "url" : "https://github.com/lazka/libsass.git",
                        "branch" : "meson"
                    }]
                },
                {
                    "name" : "sassc",
                    "buildsystem" : "meson",
                    "cleanup": ["*"],
                    "sources" : [{
                        "type" : "git",
                        "url" : "https://github.com/lazka/sassc.git",
                        "branch" : "meson"
                    }]
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgir=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate/",
                    "commit": "a6b1e3c7d0a28dda5fb57d4eec8e2dfdfb5b309c"
                }
            ]
        },
        {
            "name": "ashpd-demo",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/bilelmoussaoui/ashpd/releases/download/0.0.1-alpha/ashpd-demo-0.0.1.tar.xz",
                    "sha256": "972bd57d0a9a85c711e51eb75ed72d416beca3c99a6666469aff466e97ec22ed"
                }
            ]
        }
    ]
}
